{
  "name": "bridge-node-starter",
  "version": "0.0.0",
  "description": "Node server starter",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "dev": "nodemon src/index.js",
    "test:watch": "jest --watch"
  },
  "author": "",
  "devDependencies": {
    "jest": "^22.4.4",
    "nodemon": "^1.17.5"
  },
  "dependencies": {
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "winston": "^3.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.js",
      "**/*.spec.js",
      ".git",
      "node_modules"
    ]
  },
  "jest": {
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js)$",
    "moduleFileExtensions": [
      "js",
      "json"
    ]
  }
}
